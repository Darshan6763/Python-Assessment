import os

input_dir = 'data_input'
output_dir = 'data_output'

if not os.path.exists(input_dir):
    os.makedirs(input_dir)
    print(f"'{input_dir}' folder created. Please add .txt files to it and re-run the script.")
    exit()

if not os.path.exists(output_dir):
    os.makedirs(output_dir)

summary_lines = []

for filename in os.listdir(input_dir):
    if filename.endswith('.txt'):
        input_path = os.path.join(input_dir, filename)
        output_path = os.path.join(output_dir, filename)

        with open(input_path, 'r', encoding='utf-8') as infile:
            lines = infile.readlines()

        modified_lines = []
        line_count = 0
        word_count = 0

        for line in lines:
            if line.strip().startswith("#"):
                continue  # Skip comment lines
            line_count += 1
            word_count += len(line.split())
            modified_lines.append(line.replace("temp", "permanent"))

        with open(output_path, 'w', encoding='utf-8') as outfile:
            outfile.writelines(modified_lines)

        summary_lines.append(f"{filename} - Lines: {line_count}, Words: {word_count}")

summary_path = os.path.join(output_dir, 'summary.txt')
with open(summary_path, 'w', encoding='utf-8') as summary_file:
    summary_file.write("File Summary (excluding comment lines)\n")
    summary_file.write("--------------------------------------\n")
    for line in summary_lines:
        summary_file.write(line + '\n')

print("Processing complete. Check the 'data_output' folder for results.")
